{
    "manifest_version": 2,

    "name": "YTShuffle",
    "description": "YTShuffle allows you to listen to albums YouTube in shuffle mode if the track times are in the description.",
    "version": "1.0",
    "icons": {
        "16": "imgs/icon16.png",
        "48": "imgs/icon48.png",
        "128": "imgs/icon128.png"
    },

    "permissions": [
        "notifications"
        ],
    "content_scripts": [
        {
            "matches": ["youtube.com"],
            "js": ["scripts/ytshuffle.js"]
        }
    ],
    "browser_action": {
        "default_icon": "imgs/icon128.png",
        "default_popup": "display.html"
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
}
